<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="far fa-file-alt"></i> {{title}}</h1>
            <br>
            {{> _messages}}
            <form action="/customers/invoices/new" method="POST">
                <div class="form-group">
                    {{!-- <label for="number">Invoice #</label> --}}
                    <input type="text" id="number" name="number" class="form-control" placeholder="Enter Invoice #" />
                </div>
                <div class="form-group">
                    {{!-- <label for="date">Date of Invoice</label> --}}
                    <input type="date" id="date" name="date" class="form-control" />
                </div>

                <div class="form-group">
                    <div class="input-field">
                        <select id="customer" name="customer">
                            {{#each customers}}
                            <option value="{{_id}}" selected>{{name}}</option>
                            {{/each}}
                        </select>
                        <label for="status">Status</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-field">
                        <select id="customerType" name="customerType">
                            <option value="WalkInCustomer">Walk-in-Customer</option>
                            <option value="PartialPaymentCustomer">Partial-Payment-Customer</option>
                            <option value="WholeSaleCustomer">Whole-Sale-Customer</option>
                        </select>
                        <label for="status">Status</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Create</button>
            </form>
        </div>
    </div>
</div>