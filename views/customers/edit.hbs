<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-edit"></i> {{title}}</h1>
            <br>
            {{> _messages}}
            <form action="/customers/edit/{{customer._id}}" method="POST">
                <div class="form-group">
                    <label for="name">customer Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="{{customer.name}}" autofocus />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" class="form-control"
                        value="{{customer.description}}" />
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" class="form-control" value="{{customer.address}}" />
                </div>

                <div class="form-group">
                    <label for="phone">Phone</label>
                    <textarea name="phone" id="phone" class="form-control">{{customer.phone}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </form>
        </div>
    </div>
</div>