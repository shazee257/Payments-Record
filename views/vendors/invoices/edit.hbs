<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="far fa-edit"></i> {{title}}</h1>
            <br>
            {{> _messages}}
            <form action="/vendors/invoices/edit/{{invoice._id}}" method="POST">
                <div class="form-group">
                    <label for="number">Invoice #</label>
                    <input type="text" id="number" name="number" class="form-control" value="{{invoice.number}}" />
                </div>
                <div class="form-group">
                    <label for="date">Date of Invoice</label>
                    <input type="date" id="date" name="date" class="form-control"
                        value="{{formatDate invoice.date 'YYYY-MM-DD'}}" />
                </div>
                <div class=" form-group">
                    <label for="vendor">Vendor</label>
                    <select id="vendor" name="vendor" class="form-control">
                        {{#each vendors}}
                        <option value="{{_id}}" {{selectedVendor _id ../invoice.vendor._id}}>
                            {{name}}</option>
                        {{/each}}

                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Create</button>
            </form>
        </div>
    </div>
</div>