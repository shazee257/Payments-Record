<div class="d-flex">
    <a href="/users/list" class="">
        <h3>Users Management <i class="fas fa-arrow-right"></i> </h3>
    </a>
    <a>
        <h3> New User</h3>
    </a>

</div>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Create New User
            </h1>
            <br>
            {{> _messages}}
            <form action="/users/new" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="{{name}}" />
                </div>
                <div class="form-group">
                    <label for="phone">Phone #</label>
                    <input type="text" id="phone" name="phone" class="form-control"
                        placeholder="Enter phone eg: 03002121021" value="{{phone}}" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="{{ email}}" />
                </div>
                <div class="form-group">
                    <label for="accessLevel">Access Level</label>
                    <select class="form-control" name="accessLevel" id="accessLevel">
                        <option value="Guest">Guest</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="{{password}}" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password" value="{{ password2 }}" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Create User
                </button>
            </form>
        </div>
    </div>
</div>