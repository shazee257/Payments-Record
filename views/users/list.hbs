<h1><i class="fas fa-address-card mr-2"></i>Users Management</h1>

<table class="table" id="example">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Access Level</th>
            <th>Created At</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{phone}}</td>
            <td>{{accessLevel}}</td>
            <td>{{formatDate createAt 'DD-MMM-YYYY'}}</td>
            <td>
                <a href="/users/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit" style="color:navy;"></i>
                </a>
            </td>
            <td>
                <form action="/users/delete/{{_id}}/" method="GET">
                    <button type="submit" class="btn">
                        <i class="fas fa-trash" style="color: red"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<br><br>
{{> _messages}}
<div class="fixed-action-btn">
    <a href="/users/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> New User</a>
</div>